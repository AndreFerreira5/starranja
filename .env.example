# Application Settings
APP_NAME=StArranja
DEBUG=false
ENVIRONMENT=production

# Database Configuration
AUTH_DATABASE_URL=postgresql://user:password@localhost:5432/starranja

# Time cost: Number of iterations
ARGON2_TIME_COST=3

# Memory cost: Memory usage in KiB
ARGON2_MEMORY_COST=65536

# Parallelism: Number of parallel threads
ARGON2_PARALLELISM=4

# Hash length: Length of the hash in bytes
ARGON2_HASH_LENGTH=32

# Salt length: Length of the salt in bytes
ARGON2_SALT_LENGTH=16

# Password policy
MIN_PASSWORD_LENGTH=8
MAX_PASSWORD_LENGTH=128

# Generate a secure 32-byte (generate_paseto_key.py)
PASETO_SECRET_KEY=your_64_character_hex_key_here_replace_this_value_immediately

# Access token expiration
ACCESS_TOKEN_EXPIRE_MINUTES=15

# Refresh token expiration
REFRESH_TOKEN_EXPIRE_DAYS=7