# StArranja Environment Configuration
# Copy this file to .env and adjust values as needed

# Application Settings
APP_NAME=StArranja
DEBUG=false
ENVIRONMENT=production

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/starranja

# Argon2 Password Hashing Configuration

# Number of iterations (recommended: 2-4 for Argon2id)
ARGON2_TIME_COST=3

# Memory usage in KiB (recommended: 65536 KiB = 64 MiB)
ARGON2_MEMORY_COST=65536

# Number of parallel threads (recommended: 4)
ARGON2_PARALLELISM=4

# Length of the hash in bytes (recommended: 32)
ARGON2_HASH_LENGTH=32

# Length of the salt in bytes (recommended: 16)
ARGON2_SALT_LENGTH=16

# Password Policy Settings
MIN_PASSWORD_LENGTH=8
MAX_PASSWORD_LENGTH=128